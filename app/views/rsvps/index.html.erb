<div class="container" style="background-color: white;">
  <%= render 'layouts/navbar' %>
  <%= form_for @person, :url => url_for(:controller => 'rsvps', :action => 'create') do |f| %>
    <div>
    <%= f.label :email, "Your Email:" %>
    <%= f.email_field :email, required: true %>
  </div>

  	<h3>
  		Are you attending the wedding on June 7th 2025?
  	</h3>
  	  <div class="form-check">
  	 <%= f.radio_button :rsvp_status, true, class: 'form-check-input' %> 
  	 <%= f.label :rsvp_status_yes, "I am attending", class: "form-check-label" %>
  	</div>
 	<div class="form-check">

     <%= f.radio_button :rsvp_status, false, class: "form-check-input" %>
     <%= f.label :rsvp_status_no, "I am not attending", class: "form-check-label" %>
 	</div>
  	<%= f.submit "Submit RSVP", class: "btn btn-primary" %>
  <% end %>
</div>